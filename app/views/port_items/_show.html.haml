%ul.display-list
  - @port_item_categories.each do |port_item| 
    %li.display-list__item
      %h2
        = port_item.port_item.title
        \: 
        = port_item.port_item.year
      .display-list__image
        %img{ role: "hover-change", src: port_item.port_item.image }
      %div{ role: "category_list"}
        %p
          %strong
            Technologies:  
          %em
            = port_item.port_item.comma_separated_categories(port_item.port_item)
      %div
        %strong
          Description:
        %p
          = port_item.port_item.description
      %div
        = link_to "view", port_item.port_item.link, target: "_blank"

