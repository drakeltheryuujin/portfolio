- @port_items = PortItem.all
%ul.display-list
  - @port_items.each do |port_item| 
    %li.display-list__item
      %h2
        = port_item.title
        \: 
        = port_item.year
      .display-list__image
        %img{ role: "hover-change", src: port_item.image }
      %div{ role: "category_list"}
        %strong
          Technologies:  
        %em
          = port_item.comma_separated_categories(port_item)
      %div
        %p
          %strong
            Description:
          %br
          = port_item.description
      %div
        = link_to "view", port_item.link, target: "_blank"
